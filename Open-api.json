{
  "openapi": "3.0.0",
  "info": {
    "title": "Cloud Computing API",
    "version": "1.0.0",
    "description": "API untuk layanan pengguna dalam proyek Cloud Computing."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Server lokal"
    }
  ],
  "paths": {
    "/api/v1/register": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  },
                  "confPassword": {
                    "type": "string"
                  }
                },
                "required": ["name", "email", "password", "confPassword"]
              }
            }
          },
          "responses": {
            "201": {
              "description": "Registration successful"
            },
            "400": {
              "description": "Bad request - Invalid input data",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "msg": {
                        "type": "string",
                        "example": "Semua kolom wajib diisi"
                      }
                    }
                  }
                }
              }
            },
            "409": {
              "description": "Conflict - Email already exists",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "msg": {
                        "type": "string",
                        "example": "Email telah terdaftar"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/login": {
      "post": {
        "summary": "Login a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          },
          "responses": {
            "200": {
              "description": "Login successful",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "accessToken": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Email not found",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "msg": {
                        "type": "string",
                        "example": "Email tidak ditemukan"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Password incorrect",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "msg": {
                        "type": "string",
                        "example": "Password salah"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/logout": {
      "delete": {
        "summary": "Logout a user",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Logout successful"
          },
          "204": {
            "description": "No content - Already logged out"
          },
          "401": {
            "description": "Unauthorized - Invalid token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Token tidak valid"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/token": {
      "get": {
        "summary": "Refresh access token",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token refreshed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid refresh token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Token refresh tidak valid"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Token expired",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "Token telah kedaluwarsa"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/userdata": {
      "post": {
        "summary": "Add or update user data",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "age": {
                    "type": "integer"
                  },
                  "gender": {
                    "type": "string",
                    "enum": ["Male", "Female"]
                  },
                  "bedTime": {
                    "type": "string",
                    "format": "time"
                  },
                  "wakeupTime": {
                    "type": "string",
                    "format": "time"
                  }
                },
                "required": ["age", "gender", "bedTime", "wakeupTime"]
              }
            }
          },
          "responses": {
            "200": {
              "description": "User  data updated successfully"
            },
            "400": {
              "description": "Bad request - Invalid input data",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "msg": {
                        "type": "string",
                        "example": "Data tidak valid"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized - Invalid token",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "msg": {
                        "type": "string",
                        "example": "Token tidak valid"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}